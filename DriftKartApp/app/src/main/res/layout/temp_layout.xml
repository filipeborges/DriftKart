<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tempRelLay"
    android:layout_width="125dp"
    android:layout_height="125dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/tempImageView"
        android:layout_width="62dp"
        android:layout_height="90dp"
        style="@style/imageViewMockStyle" />

    <TextView
        android:id="@+id/tempTextView"
        android:layout_below="@+id/tempImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:text="@string/temp_label"
        style="@style/sensorLabelStyle" />

    <TextView
        android:id="@+id/tempValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:text="45 C"
        style="@style/sensorValueDefaultStyle" />

</RelativeLayout>