<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/performance_RelLay"
    android:layout_width="125dp"
    android:layout_height="125dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true">

    <CheckBox
        android:id="@+id/performanceCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/performanceTextView"
        android:layout_centerInParent="true"
        android:paddingBottom="15dp" />

    <TextView
        android:id="@+id/performanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:text="@string/performance_label"
        style="@style/sensorLabelStyle" />

    <ImageView
        android:id="@+id/performanceImageView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/imageViewMockStyle" />

</RelativeLayout>