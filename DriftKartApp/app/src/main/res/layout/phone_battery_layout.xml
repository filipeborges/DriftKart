<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phoneBattRelLay"
    android:layout_width="125dp"
    android:layout_height="125dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/phoneBattImageView"
        android:layout_width="62dp"
        android:layout_height="90dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/phoneBattTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/phone_battery_label"
        style="@style/sensorLabelStyle" />

    <TextView
        android:id="@+id/phoneBattValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="9dp"
        style="@style/sensorValueDefaultStyle" />

</RelativeLayout>